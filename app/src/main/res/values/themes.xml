<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fyp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/textclr</item>
        <item name="colorPrimaryVariant">@color/textclr</item>
        <item name="colorOnPrimary">@color/textclr</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/textclr</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="alertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/textclr</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily" tools:targetApi="m">@font/raleway_bold</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:itemBackground">@color/bg</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/bg</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Popup_Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonPDStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonPDStyle</item>
        <item name="android:background">@color/textclr</item>
    </style>
    <style name="PositiveButtonPDStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="NegativeButtonPDStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">17sp</item>
    </style>


</resources>